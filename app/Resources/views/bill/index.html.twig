{% extends 'base.html.twig' %}

{% block body %}

	  {% for flashMessage in app.session.flashbag.get('success') %}
	  <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  		{{ flashMessage }}
	  </div>
	  {% endfor %}

	<div class="panel panel-primary">

      <div class="panel-heading">Create a Bill</div>
      <div class="panel-body">
      	<a class="btn btn-success" href="{{ path('bill_create') }}">Create a Bill</a>
      </div>
    </div>

	<div class="panel panel-primary">
      <div class="panel-heading">Bill List</div>
      <div class="panel-body">
      	<table class="table">
    		<thead>
    			<tr>
	    			<th>Bill No</th>
            <th>Customer Name</th>
	    			<th></th>
	    		</tr>
    		</thead>
    		<tbody>
    			{% for bill in bills %}
    			<tr>
	    			<td>{{ bill.id              }}</td>
            <td>{{ bill.customerId.name }}</td>
	    			<td>
	    				<a class="btn btn-default" href="{{ path('bill_edit', { 'id' : bill.id } ) }}">Edit</a>
	    				<form method="post" action="{{ path('bill_delete', { 'id' : bill.id } ) }}" style="display: inline;">
	    					<input type="submit" class="btn btn-danger" name="save" value="Delete">
	    				</form>
	    			</td>
    			</tr>
    			{% endfor %}
    		</tbody>
  		</table>
      </div>
    </div>

{% endblock %}