{% extends 'base.html.twig' %}

{% block body %}

	  {% for flashMessage in app.session.flashbag.get('success') %}
	  <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>

  		{{ flashMessage }}
	  </div>
	  {% endfor %}

	<div class="panel panel-primary">

      <div class="panel-heading">Create an Inventory</div>
      <div class="panel-body">
      	<a class="btn btn-success" href="{{ path('inventory_create') }}">Create an Inventory</a>
      </div>
    </div>

	<div class="panel panel-primary">
      <div class="panel-heading">Inventory List</div>
      <div class="panel-body">
      	<table class="table">
    		<thead>
    			<tr>
	    			<th>Type</th>
	    			<th>Status</th>
	    			<th></th>
	    		</tr>
    		</thead>
    		<tbody>
    			{% for inventory in inventories %}
    			<tr>
	    			<td>{{ inventory.type }}</td>
	    			<td>{{ inventory.status }}</td>
	    			<td>
	    				<a class="btn btn-default" href="{{ path('inventory_edit', { 'id' : inventory.id } ) }}">Edit</a>
	    				<form method="post" action="{{ path('inventory_delete', { 'id' : inventory.id } ) }}" style="display: inline;">
	    					<input type="submit" class="btn btn-danger" name="save" value="Delete">
	    				</form>
	    			</td>
    			</tr>
    			{% endfor %}
    		</tbody>
  		</table>
      </div>
    </div>

{% endblock %}