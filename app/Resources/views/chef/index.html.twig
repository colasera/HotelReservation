{% extends 'base.html.twig' %}

{% block body %}

	  {% for flashMessage in app.session.flashbag.get('success') %}
	  <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  		{{ flashMessage }}
	  </div>
	  {% endfor %}

	<div class="panel panel-primary">

      <div class="panel-heading">Create a Chef</div>
      <div class="panel-body">
      	<a class="btn btn-success" href="{{ path('chef_create') }}">Create a Chef</a>
      </div>
    </div>

	<div class="panel panel-primary">
      <div class="panel-heading">Chef List</div>
      <div class="panel-body">
      	<table class="table">
    		<thead>
    			<tr>
	    			<th>Name</th>
	    			<th>Location</th>
            <th></th>
	    		</tr>
    		</thead>
    		<tbody>
    			{% for chef in chefs %}
    			<tr>
	    			<td>{{ chef.name     }}</td>
            <td>{{ chef.location }}</td>
	    			<td>
	    				<a class="btn btn-default" href="{{ path('chef_edit', { 'id' : chef.id } ) }}">Edit</a>
	    				<form method="post" action="{{ path('chef_delete', { 'id' : chef.id } ) }}" style="display: inline;">
	    					<input type="submit" class="btn btn-danger" name="save" value="Delete">
	    				</form>
	    			</td>
    			</tr>
    			{% endfor %}
    		</tbody>
  		</table>
      </div>
    </div>

{% endblock %}